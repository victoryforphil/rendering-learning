CompileFlags:
  # Treat code as C++, use C++17 standard
  Add: [-xc++, -std=c++17]
  # Remove some distracting flags
  Remove: [-W*, -fcolor-diagnostics]

Index:
  # Exclude Bazel output directories from indexing
  Background: Skip
  
Diagnostics:
  # Enable clang-tidy checks
  ClangTidy:
    Add: [readability-*, modernize-*, performance-*, bugprone-*]
    Remove: [modernize-use-trailing-return-type, readability-identifier-length]
  # Suppress some noisy warnings
  Suppress: ['pp_file_not_found']

InlayHints:
  Enabled: true
  DefinitionComments: true
  Designators: true

Hover:
  ShowAKA: true